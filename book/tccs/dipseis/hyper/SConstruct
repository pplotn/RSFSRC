Flow('hyper-ct-n','hyper hyper-ct','add scale=1,-1 ${SOURCES[1]}')
Flow('hyper-ct-n-0 hyper-ct-0','hyper-ct-n hyper-ct','ortho rect1=30 rect2=30 sig=${SOURCES[1]} sig2=${TARGETS[1]}')
Grey2('hyper-ct','')
